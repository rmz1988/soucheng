<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/title_bg">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/title"
                android:layout_gravity="center_vertical|left"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_gravity="center"
                />
        <Button android:id="@+id/backBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="@string/back"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"/>
    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/moreView"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:background="@color/white">
        <Button android:id="@+id/addressShowBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/query_addr"
                android:gravity="left|center_vertical"
                android:textSize="16dp"
                android:background="@drawable/more_btn_selector"
                android:textColor="@color/dark_gray"/>
        <Button android:id="@+id/addressAddBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_addr"
                android:gravity="left|center_vertical"
                android:textSize="16dp"
                android:background="@drawable/more_btn_selector"
                android:textColor="@color/dark_gray"/>
    </LinearLayout>
</LinearLayout>