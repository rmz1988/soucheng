<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/shopView"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <HorizontalScrollView android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:scrollbars="none">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <com.soucheng.widget.ImageTextButton
                    android:id="@+id/shopBtn1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            <com.soucheng.widget.ImageTextButton
                    android:id="@+id/shopBtn2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            <com.soucheng.widget.ImageTextButton
                    android:id="@+id/shopBtn3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            <com.soucheng.widget.ImageTextButton
                    android:id="@+id/shopBtn4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            <com.soucheng.widget.ImageTextButton
                    android:id="@+id/shopBtn5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            <com.soucheng.widget.ImageTextButton
                    android:id="@+id/shopBtn6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ListView android:id="@+id/goodsListView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scrollbars="none"
              android:background="@drawable/home_item_bg"/>
    <TextView android:id="@+id/emptyTip"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="@string/no_goods"
              android:gravity="center"
              android:visibility="gone"
              android:background="@drawable/home_item_bg"/>
</LinearLayout>